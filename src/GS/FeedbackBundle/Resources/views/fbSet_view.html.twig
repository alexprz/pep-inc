{% extends 'CoreBundle::layout.html.twig' %}

{% block body %}

<h1>{{ feedbackSet.title }}</h1>
<a href="{{path('gs_feedback_homepage')}}">Retour</a>
<br>
<a href="{{ path('gs_feedback_fbSet_edit', {'setId': feedbackSet.id}) }}"><button type="button" class="btn btn-outline-primary">Modifier</button></a>
<a href="{{ path('gs_feedback_fbSet_confirm_delete', {'setId': feedbackSet.id}) }}"><button type="button" class="btn btn-outline-danger">Supprimer</button></a><br>
<br>
<a href="{{ path('gs_feedback_fb_add', {'setId': feedbackSet.id, 'type': 1}) }}"><button type="button" class="btn btn-outline-primary">Ajouter un questionnaire de satisfaction Ã‰tudiant</button></a><br>
<a href="{{ path('gs_feedback_fb_add', {'setId': feedbackSet.id, 'type': 2}) }}"><button type="button" class="btn btn-outline-success">Ajouter un questionnaire de satisfaction Client</button></a><br>
<a href="{{ path('gs_feedback_fb_add', {'setId': feedbackSet.id, 'type': 3}) }}"><button type="button" class="btn btn-outline-danger">Ajouter un questionnaire de refus Client</button></a>

<br><br>
{% for fb in fbList %}
    <a href="{{path('gs_feedback_fb_view', {'setId': feedbackSet.id, 'fbId': fb.id})}}">
        {{fb.stringTitle}}
    </a>
    {% if fb.isSubmitted %}<b class="text-success">{% else %}<b class="text-danger">{% endif %}
        {{ fb.stringState }}
    </b>
    {% if fb.isSubmitted %}{{ fb.responseDate|date('d M Y') }}{% endif %}
    {{ fb.stringName }}
    {{ fb.creationDate|date('d M Y') }}
    <br>
{% endfor %}

{% endblock %}
