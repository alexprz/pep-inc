<script>
        var refreshSearch = function()
        {
          var search = document.getElementById("search").value;
          var location = "{{ path }}"+"?search="+search;
          var obj = "document.location.href='"+location+"'";
        }

        var timer;
        function onKeyUpHandler()
        {
            timer = setTimeout("refreshSearch()", 800)
        }
        function onKeyDownHandler()
        {
            clearTimeout(timer);
        }
</script>
